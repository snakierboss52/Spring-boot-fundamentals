pipeline {
    agent any

       environment {
            //Use Pipeline Utility Steps plugin to read information from pom.xml into env variables
            VERSION = readMavenPom().getVersion()
            }

    stages {
        stage('Pulling image') {
            steps {
                echo 'Pulling image..'
                sh 'aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/o0t4x4s0'
                sh 'docker pull public.ecr.aws/o0t4x4s0/springfundamentals:${VERSION}'
            }
        }
        stage("docker compose up"){
            steps{
            echo 'running compose'
            sh "docker-compose up -d"
            }
        }
        stage('Post actions'){
            steps{
                echo 'Valida en el navegador localhost:8580'
                echo 'Cleaning volumes'
                sh 'docker volume prune -f'
                sh 'docker image prune -f'
            }
        }
    }
}
