pipeline {
    agent any
    stages {
        stage('Pulling image') {
            steps {
                echo 'Building..'
                sh "docker pull snakierboss/springfundamental:latest"
            }
        }
        stage("Running image"){
            steps{
            echo 'running image'
            sh "docker run -d snakierboss/springfundamental:latest"
            }
        }
        stage('Post actions'){
            steps{
                echo 'Valida en el navegador'
            }
        }
    }
}