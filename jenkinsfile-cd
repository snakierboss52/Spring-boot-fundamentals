pipeline {
    agent any
    stages {
        stage('Pulling image') {
            steps {
                echo 'Pulling image..'
                sh "docker pull snakierboss/springfundamental:latest"
            }
        }
        stage("docker compose"){
            steps{
            echo 'running compose'
            sh "docker-compose up -d"
            }
        }
        stage('Post actions'){
            steps{
                echo 'Valida en el navegador'
            }
        }
    }
}